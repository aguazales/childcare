<div id="childSign">
<div id="popover-markup"> <button class="trigger btn-large btn-warning pull-right" style="padding: 5px" data-placement="bottom">Child Drop Off</button> 
    <div class="head hide">Child Drop Off</div>
    <div class="content hide">
        <div class="form-group">
            <input type="text" class="form-control" name="username" placeholder="email">
			<input type="text" class="form-control" name="password" placeholder="password">
			<input type="text" class="form-control" name="child" placeholder="child">
			<textarea type="text" rows="4" cols="50" class="form-control" name="notes" placeholder="notes"></textarea>
        </div>
        <button type="submit" class="btn btn-default btn-block">Submit</button>
    </div>
    <div class="footer hide">test</div>
</div>
</div>
<script>
$('#popover-markup>.trigger').popover({
    html: true,
    title: function () {
        return $(this).parent().find('.head').html();
    },
    content: function () {
        return $(this).parent().find('.content').html();
    }
});

</script>
