<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <!--<%= link_to "Storyland Childcare", '#', id: "logo" %>-->
      <%= link_to "StoryLand Childcare", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right float_right">
        <!--  <li><%= link_to "Home", root_path %></li> -->
	  <!-- Display if the user is signed in -->
          <% if signed_in? %>
            <li><%= link_to "Users", users_path %></li>
	    	<%= render 'partials/logedin' %>

	  <!-- If not don't show what is above and instead show this -->
          <% else %>
            <!--HTML Tag, Ruby code, "Name", where it is-->
		<!-- login code starts here -->
	    <li id="login"><%= form_for(:session, url: sessions_path) do |f| %>
		<%= f.text_field :email,placeholder: "email" %>
   		<%= f.password_field :password, placeholder: "password" %>
		<%= f.submit "Sign in", class: "btn btn-medium btn-primary", id: "sign-in" %>	
		<div id="newUser">New user? <%= link_to "Sign up now!", signup_path %><div>
    	    <% end %></li><!-- End of login code -->
          <% end %> <!--ends if the if/else statement-->
        </ul>
      </nav>
    </div>
  </div>
</header>
