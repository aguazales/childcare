<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
	
	  <%= render 'shared/error_messages', :object => @user %>

      <%= f.label "First Name" %>
      <%= f.text_field :fname %>
	  
	  <%= f.label "Last Name" %>
      <%= f.text_field :lname %>

      <%= f.label :email %>
      <%= f.text_field :email %>
	  
      <%= f.submit "Save Changes", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>