<% provide(:title, @vehicle.full_description ) %>
<h1>Edit: <%= @vehicle.full_description %> </h1>

<div class="row">
  <div class="span8">
	<%= form_for(@vehicle) do |f| %>
	
	<%= render 'shared/error_messages', :object => @vehicle %>
	<div class="table-responsive">
	<table class="table table-condensed">
    	<tr>
			<td>Make: </td>
			<td><%= f.text_field :make %></td>
		</tr>
    	<tr>
			<td>Model: </td>
			<td><%= f.text_field :model %></td>
		</tr>
    	<tr>
			<td>Year: </td>
			<td><%= f.text_field :year %></td>
		</tr>
    	<tr>
			<td>License Plate Number: </td>
			<td><%= f.text_field :license %></td>
		</tr>
    	<tr>
			<td>Depreciation Rate: </td>
			<td><%= f.text_field :depreciation_rate %></td>
		</tr>
	  <%= f.hidden_field :user_id, {:value => current_user.id}%>
	 </table>
     </div>
	  <p></p>
      <%= f.submit "Save Changes", class: "btn btn-large btn-primary" %>
	  <%= link_to "Cancel", vehicle_path(@vehicle.id), class: "btn btn-large btn-primary" %>
	  
    <% end %>
  </div>
</div>
