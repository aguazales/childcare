<%= form_for @document, :html => {:multipart => true} do |f| %>
	<p>
		<%= render 'shared/error_messages', :object => @document %>
		<%= f.file_field :path %>
		
		<%= f.hidden_field :user_id, {:value => current_user.id}%>
		
		<p><%= f.submit "Upload Document", class: "btn btn-large btn-primary" %>
		
		<%= link_to "Cancel", users_path, class: "btn btn-large btn-primary" %></p>
	</p>
<% end %>
