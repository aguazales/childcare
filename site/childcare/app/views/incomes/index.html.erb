<h3>Income Records</h3>
<%= link_to "Add new Invoice/Income Record", new_income_path %>
<div class="table-responsive incomes">
	<table class="table table-condensed table-hover table-striped table-bordered">
		<tr>
			<th width="60px">Date</th>
			<th>Memo</th>
			<th width="120px">Income Type</th>
			<th width="20px">Paid</th>
			<th width="120px">Amount</th>
			<th width="80px"></th>
		</tr>
		<% @incomes.each_with_index do |income, i| %>
		<tr data-link="<%= income_path(income.id) %>" >
			<td width="60px" ><%= income.date("%m/%d/%Y") %></td>
	  		<td><%= link_to income.description, income_path(income.id)  %></td>
			<td><%= income.income_type %></td>
			<td><input id="check1" type="checkbox" <% if income.paid %>  checked="checked" readonly <% else %><%end%>></td>

			<td><span class="pull-right"><%= income.amount %></span></td>
			<td width="80px">
				<span class="pull-right">
					<%= link_to "Edit", edit_income_path(income.id)%>
					|
					<%= link_to "Delete", income_path(income.id), method: :delete, data: { confirm: 'Are you sure?' } %>
				</span>
			</td>
		</tr>
		<%end%>
		<!-- add a new row -->
		<tr>
			<td colspan="7">
				<%= link_to "New Entry", new_income_path, class: "pull-right" %>	
				</a>
			</td>
		</tr>
	
	</table>
</div>

