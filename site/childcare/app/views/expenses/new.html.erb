<% provide(:title, "New Expense") %>
<h1>New Expense Record</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@expense) do |f| %>
      <%= render 'shared/error_messages', :object => @expense %>

	  <%= f.label :description %>
      <%= f.text_field :description %>
	  
      <%= f.label :amount %>
      <%= f.text_field :amount %>
	  
	  <%= f.label "Percent Home Usage" %>
	  <%= f.text_field :percent_home_useage %>
	  
	  <%= f.label :depreciation_rate %>
      <%= f.text_field :depreciation_rate %>
	  
	  <%= f.label "Type" %>
      <%= f.text_field :expense_type %>

	  <%= collection_select(:vehicle, :id, @user.vehicles.all, :id, :full_description) %>
	  
      <%= f.label :date %>
      <%= f.text_field :date %>
	  
	  <%= f.hidden_field :user_id, {:value => @user.id}%>
	  
	  <p></p>
      <%= f.submit "Save record", class: "btn btn-large btn-primary" %>  
	  
    <% end %>
	
  </div>
</div>