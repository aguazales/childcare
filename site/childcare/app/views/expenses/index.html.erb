			<th>Date</th>
			<th>Expense</th>
			<th>Memo</th>
			<th>Amount</th>
			<th></th>
		</tr>
		<% @expenses.each_with_index do |expense, i| %>
		<tr>
			<td><%= expense.date  %></td>
			<td><%= link_to expense.expense_type, expense_path(expense.id)  %></td>
			<td><%= expense.description %></td>		
			<td><%= expense.amount %></td>
		</tr>
		<tr>
			<td colspan="7">
				<%= link_to "New Entry", new_expense_path, class: "pull-right" %>	
