<div class="table-responsive incomes">
	<table id="myTable" class="table table-condensed table-hover table-striped table-bordered users">
		<thead>		
		<tr>
			<th>First Name</th>
			<th>Last Name</th>
			<th>User Type</th>
			<th>City</th>
			<th>State</th>
			<th>Street</th>
			<th>Zip</th>
			<th>phone</th>
			<th width="125px"></th>
		</tr>
		</thead>
		<tbody>
	<% @users.each_with_index do |user, i| %>
		<tr>
			<td><%= link_to user.fname, user_path(user.id)  %></td>
			<td><%= link_to user.lname, user_path(user.id)  %></td>
			<td><%= user.user_type %></td>
			<td><%= user.city %></td>
			<td><%= user.state %></td>
			<td><%= user.street_addr %></td>
			<td><%= user.zip %></td>
			<td><%= number_to_phone(user.phone_home, area_code: true) %></td>
			<td>
				<span class="pull-right">
					<%= link_to "Edit", edit_user_path(user.id), class: "btn btn-primary btn-small" %>
					|
					<%= link_to "Delete", user_path(user.id), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-small" %>
				</span>
			</td>
		</tr>

	<%end%>
	</tbody>
