<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @event.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @event.description %>
</p>

<p>
  <strong>Allday:</strong>
  <%= @event.allDay %>
</p>

<p>
  <strong>Start:</strong>
  <%= @event.start %>
</p>

<p>
  <strong>End:</strong>
  <%= @event.end %>
</p>

<p>
  <strong>Duration:</strong>
  <%= "#{@event.duration} seconds ( #{@event.duration.to_f/3600} hours)" %>
</p>

<p>
  <strong>Duration (rounded):</strong>
  <%= "#{@event.duration_rounded(15.minutes)} seconds ( #{@event.duration_rounded(15.minutes).to_f/3600} hours)" %>
</p>

<p>
  <strong>Url:</strong>
  <%= @event.url %>
</p>

<p>
  <strong>Color:</strong>
  <%= @event.color %>
</p>

<p>
  <strong>Textcolor:</strong>
  <%= @event.textColor %>
</p>

<% if !@event.child_id.nil? %>
<p>
  <strong>Child:</strong>
  <%= link_to @child.full_name, child_path(@child.id) %>
</p>
<% end %>

<p>
  <strong>Type:</strong>
  <%= @event.type %>
</p>

<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>
