<% provide(:title, 'Settings') %>
<h1>Settings</h1>

<div class="row">
  <div class="span8">
    <%= form_for(@facility) do |f|%>
	  <%= render 'shared/error_messages', :object => @facility %>
	  <div class="table-responsive">
	  <table class="table table-condensed">
		<tr>
			<td width="150px">Business Name: </td>
			<td><%= f.text_field :business_name %></td>
		</tr>
		<tr >
			<td width="150px">Business Phone:</td>
			<td><%= f.text_field :business_phone %></td>
		</tr>
		<tr >
			<td width="150px">Business Email:</td>
			<td><%= f.text_field :business_phone %></td>
		</tr>
		<tr width="150px">
			<td width="150px">Street Address:</td>
			<td><%= f.text_field :business_address_one %></td>
			<td width="150px">Apt #, etc.</td>
			<td><%= f.text_field :business_address_two %></td>
		</tr>
		<tr width="150px">
			<td width="150px">City:</td>
			<td><%= f.text_field :business_city %></td>
		</tr>
		<tr width="150px">
			<td width="150px">State:</td>
			<td><%= f.text_field :business_state %></td>
		</tr>
		<tr width="150px">
			<td width="150px">ZIP:</td>
			<td><%= f.text_field :business_zip %></td>
		</tr>
		<tr width="150px">
			<td width="150px">Exclusive-Use Room:</td>
			<td><%= f.check_box :exclusive_use_room %></td>
		</tr>
	  </table>
	  </div>
	  
	  <%= link_to "Cancel", '/settings', class: "btn btn-large btn-primary" %>
	  
    <% end %>
  </div>
</div>
