					<%= text_field_tag "p1_street_addr", nil, placeholder: "Address" %>
				</section>
				<section style="float:left;">
					<div class="pull-left" style="margin-left:8px;">
						<%= label_tag  "City" %>
						<%= text_field_tag "p1_city", nil, placeholder: "city" %>
					</div> 			
					<div class="pull-left" style="margin-left: 12px">
						<%= label_tag  "Zip" %>	
						<%= text_field_tag "p1_zip", nil, placeholder: "Zip" %>
					</div>
					<div class="pull-left" style="margin-left: 5px">
						<%= label_tag  "State" %>	
						<%= text_field_tag "p1_state", nil, placeholder: "State" %>
					</div>
				</section>
			</fieldset>
			<fieldset>
				<section style="pull-left">
					<section>
						<%= label_tag "Home Number" %>
						<span class="required">*</span>
						<%= text_field_tag "p1_phone_home", nil, placeholder: "Home Phone" %>
					</section>
					<section style="float: left;"> 	  
						<%= label_tag "Cell Number" %>
						<span class="required">*</span>
						<%= text_field_tag "p1_phone_cell", nil, placeholder: "Cell Phone" %>
					</section>
					<section style="float: left; margin-left:12px;">      
						<%= label_tag "Work Number" %>
						<%= text_field_tag "p1_phone_work", nil, placeholder: "Work Phone" %>
					</section>
				</section>
			</fieldset>
		</section>
		
