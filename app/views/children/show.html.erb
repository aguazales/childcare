<% provide(:title, @child.fname) %>
<div class="row">
  <aside class="span6">
	<h3>Account Details: <%= @child.full_name %></h3>
	
	<%= form_for(@child) do |f| %>
	  <%= render 'shared/error_messages', :object => @child %>
		<small>Please fill all required fields with a </small><span class="required">*</span>
		<section id="child_Info"><!-- BEGIN Child Info -->
	      <fieldset style="float:left;">
			<p><b>Child's Information</b><p>
			<section style="float:left;">
      			<%= f.label "First Name" %>
      			<span class="required">*</span>
				<%= f.text_field :fname, placeholder: "First Name" %>
			</section>
			<section class="pull-left" style="margin-left:5px;">
	  			<%= f.label "Last Name" %>
				<span class="required">*</span>
      			<%= f.text_field :lname, placeholder: "Last Name"%>
			</section>
			<section class="pull-left" style="margin-left:5px;">
	  			<%= f.label "Rate" %>
				<span class="required">*</span>
      			<%= f.text_field :rate, placeholder: "Rate"%>
			</section>
			<p>Parents </p>
			<section class="pull-left" style="margin-left:5px;">
					<%= f.fields_for :parents do |builder| %>
						<fieldset>
							<%= builder.label :fname, "First Name NESTED " %><br/>
							<%= builder.text_field :fname %>
							<%= builder.label :lname, "Last Name NESTED " %><br/>
							<%= builder.text_field :lname %>
						</fieldset>
					<% end %>
			</section>
			
	      </fieldset>
		</section> <!-- END Child Info -->
	<% end %>
	
	
	<section class="pull-right span3 " style="margin-left:0px;">
	  <%= link_to "Change Information", edit_child_path, class: "btn btn-large btn-primary pull-left" %>
	  <% if !current_user?(@user) %>
		<p><%= link_to "Delete", child_path(@child.id), method: :delete, data: {confirm: "Are you sure you want to delete child #{@child.full_name}?"}, class: "btn btn-large btn-primary" %></p>
	  <%end%>


	<%= link_to "Back", children_path, class: "btn btn-large btn-primary pull-left  margin-top" %>
	</section>


	
</div>



