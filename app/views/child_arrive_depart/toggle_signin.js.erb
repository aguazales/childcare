/**
 This is executed when the child_arrive_depart#toggle_signin
 controller method is called with the "js"
 format (i.e. AJAX call instead of a redirect) AND a verified
 parent/guardian is being signed in
 */

/* Toggles the visibility of the list of parents for the current child */
$( "#parent_list_<%= @child.id %>").fadeToggle( "fast" );

$modal = $('.modal'),
$modalBody = $('.modal .modal-body'),
$modalHeading = $('.modal .modal-heading');
$modalFooter = $('.modal .modal-footer');
$modalHeading.html("<%= @child.full_name %>");
$modalFooter.html("<%= escape_javascript(render('partials/modal_arrive_depart')) %>");

$modalBody.html("<%= escape_javascript(render('partials/modal_verify_body')) %>");
$modal.modal();
