<% provide(:title, "Edit Invoice") %>
<h1>Edit Invoice</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@invoice) do |f| %>
      <%= render 'shared/error_messages', :object => @invoice %>

      <%= f.label :start_date %>
      <%= f.text_field :start_date, value: @invoice.start_date, class: "datepicker"%>
	  
	  <%= f.label :end_date %>
      <%= f.text_field :end_date, value: @invoice.end_date, class: "datepicker"%>
	  
	  <%= f.label :amount %>
      <%= f.text_field :amount %>
	  
	  <%= f.label :correction_amount %>
      <%= f.text_field :correction_amount, placeholder: "Amount to Add/Subtract" %>
	  
	  <%= f.label :paid %>
      <%= f.check_box :paid %>	  
	  
	  <p></p>
      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
	  <%= link_to "Cancel", invoice_path(@invoice.id), class: "btn btn-large btn-primary" %>
    <% end %>
	
  </div>
</div>
