<% provide(:title, "New Invoice") %>
  <div class="span6 offset3">
	<h1>New Invoice</h1>
    <%= form_for(@invoice) do |f| %>
      <%= render 'shared/error_messages', :object => @invoice %>
	  
	  <%= f.label "Bill To Parent" %>
	  
	  <p><%= autocomplete_field_tag :parent_autocomplete, '', autocomplete_parent_lname_parents_path, :placeholder => "Start typing a parent's name", :id_element => '#parent_id' %></p>
	  
	  <%= f.hidden_field :parent_id, :id => "parent_id" %>

	  <%= f.label :start_date %>
      <%= f.text_field :start_date, class: "datepicker" %>
	  
	  <%= f.label :end_date %>
      <%= f.text_field :end_date, class: "datepicker" %>
	  
	  <!--
      <%= f.label :amount %>
      <%= f.text_field :amount, placeholder: "Amount" %>
	  -->
	  
	  <%= f.label :correction_amount %>
      <%= f.text_field :correction_amount, placeholder: "Amount to Add/Subtract" %>

	  <%= f.label :paid %>
      <%= f.check_box :paid, id: "roundCheck" %>
	  
	  <p></p>
      <%= f.submit "Save invoice", class: "btn btn-large btn-primary" %>
	  <%= link_to "Cancel", invoices_path, class: "btn btn-large btn-primary" %>
	  
    <% end %>
</div>
<div class="row"></div>
